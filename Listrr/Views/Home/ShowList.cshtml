@model CreateShowListViewModel
@{
    ViewData["Title"] = "Show list";
}

<h2>@ViewData["Title"]</h2>
<h3>@ViewData["Message"]</h3>

<div class="row">
    <div class="col-md-12">
        <form asp-action="ShowList" method="post">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <input asp-for="Name" class="form-control" />
                        <small class="form-text text-muted">* Give your list a name that matches your filters to find it easier after creating.</small>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Query" class="form-control" />
                        <small class="form-text text-muted">Query e.g. <code>disney</code> for kids movies</small>
                        <span asp-validation-for="Query" class="text-danger"></span>
                    </div>
                    <div class="checkbox">
                        <div class="row">
                            <div class="col-md-6">
                                <label>
                                    <input asp-for="SearchByAliases" /> @Html.DisplayNameFor(m => m.SearchByAliases)
                                </label>
                            </div>
                            <div class="col-md-6">
                                <label>
                                    <input asp-for="SearchByBiography" /> @Html.DisplayNameFor(m => m.SearchByBiography)
                                </label>
                            </div>

                        </div>
                    </div>
                    <div class="checkbox">
                        <div class="row">
                            <div class="col-md-6">
                                <label>
                                    <input asp-for="SearchByDescription" /> @Html.DisplayNameFor(m => m.SearchByDescription)
                                </label>
                            </div>
                            <div class="col-md-6">
                                <label>
                                    <input asp-for="SearchByName" /> @Html.DisplayNameFor(m => m.SearchByName)
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="checkbox">
                        <div class="row">
                            <div class="col-md-6">
                                <label>
                                    <input asp-for="SearchByOverview" /> @Html.DisplayNameFor(m => m.SearchByOverview)
                                </label>
                            </div>
                            <div class="col-md-6">
                                <label>
                                    <input asp-for="SearchByPeople" /> @Html.DisplayNameFor(m => m.SearchByPeople)
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="checkbox">
                        <div class="row">
                            <div class="col-md-6">
                                <label>
                                    <input asp-for="SearchByTitle" /> @Html.DisplayNameFor(m => m.SearchByTitle)
                                </label>
                            </div>
                            <div class="col-md-6">
                                <label>
                                    <input asp-for="SearchByTranslations" /> @Html.DisplayNameFor(m => m.SearchByTranslations)
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <select asp-for="Filter_Translations" asp-items="Model.Languages" class="form-control" multiple></select>
                        <small class="form-text text-muted">Select the languages that a movie has to have translatins for</small>
                        <span asp-validation-for="Filter_Translations" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <select asp-for="Filter_Genres" asp-items="Model.Genres" class="form-control" multiple></select>
                        <small class="form-text text-muted">Select the genres a movie should have</small>
                        <span asp-validation-for="Filter_Genres" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <select asp-for="Filter_Networks" asp-items="Model.Networks" class="form-control" multiple></select>
                        <small class="form-text text-muted">Networks filter e.g. <code>netflix,amazon</code> for shows that are available on netflix and amazon</small>
                        <span asp-validation-for="Filter_Networks" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <select asp-for="Filter_Status" asp-items="Model.Status" class="form-control" multiple></select>
                        <small class="form-text text-muted">Status filter e.g. <code>planned,in production</code> for shows coming in near future.</small>
                        <span asp-validation-for="Filter_Status" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon">Between</span>
                            <input asp-for="Filter_Years.From" value="1910" class="form-control" />
                            <span class="input-group-addon" style="border-left: 0; border-right: 0;">and</span>
                            <input asp-for="Filter_Years.To" value="@DateTime.Now.Year" class="form-control" />
                        </div>
                        <small class="form-text text-muted">Years filter e.g. <code>2000-2010</code></small>
                        <span asp-validation-for="Filter_Years.From" class="text-danger"></span>
                        <span asp-validation-for="Filter_Years.To" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon">Between</span>
                            <input asp-for="Filter_Runtimes.From" value="30" class="form-control" />
                            <span class="input-group-addon" style="border-left: 0; border-right: 0;">and</span>
                            <input asp-for="Filter_Runtimes.To" value="250" class="form-control" />
                        </div>
                        <small class="form-text text-muted">Runtime filter e.g. <code>30-200</code> for movies with a runtime min. 30 and max. 200 minutes</small>
                        <span asp-validation-for="Filter_Runtimes.From" class="text-danger"></span>
                        <span asp-validation-for="Filter_Runtimes.To" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon">Between</span>
                            <input asp-for="Filter_Ratings.From" value="75" class="form-control" />
                            <span class="input-group-addon" style="border-left: 0; border-right: 0;">and</span>
                            <input asp-for="Filter_Ratings.To" value="100" class="form-control" />
                        </div>
                        <small class="form-text text-muted">Ratings filter e.g. <code>75-100</code> for a rating between 75-100</small>
                        <span asp-validation-for="Filter_Ratings.From" class="text-danger"></span>
                        <span asp-validation-for="Filter_Ratings.To" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <select asp-for="Filter_Languages" asp-items="Model.Languages" class="form-control" multiple></select>
                        <small class="form-text text-muted">Languages filter e.g. <code>en,de</code> for movies that are available in english and german</small>
                        <span asp-validation-for="Filter_Languages" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <select asp-for="Filter_Countries" asp-items="Model.Countries" class="form-control" multiple></select>
                        <small class="form-text text-muted">Countries filter e.g. <code>us,de</code> for movies that are available in the US and germany</small>
                        <span asp-validation-for="Filter_Countries" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <select asp-for="Filter_Certifications" asp-items="Model.Certifications" class="form-control" multiple></select>
                        <small class="form-text text-muted">Certifications filter e.g. <code>g,pg</code> for kids movies.</small>
                        <span asp-validation-for="Filter_Certifications" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>